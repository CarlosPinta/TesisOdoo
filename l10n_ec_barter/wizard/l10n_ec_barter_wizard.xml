<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="l10n_ec_barter_wizard_form" model="ir.ui.view">
        <field name="name">l10n.ec.barter.wizard.form</field>
        <field name="model">l10n_ec.barter.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="main_product_id" invisible="1"/>
                        <field name="user_id" invisible="1"/>
                        <field name="type"/>
                        <field name="price"
                               attrs="{'invisible':[('type','!=','price')],'required':[('type','=','price')]}"/>
                        <field name="product_offered_id"
                               attrs="{'invisible':[('type','!=','product')],'required':[('type','=','product')]}"
                               options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
                               domain="[('l10n_ec_state', '=', 'published'),('l10n_ec_user_id','=',uid)]"/>
                        <field name="message"/>
                    </group>
                    <footer>
                        <button name="create_barter" string="Ofertar" type="object" class="btn-primary"
                                data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="l10n_ec_barter_wizard_action" model="ir.actions.act_window">
        <field name="name">Ofertar</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_ec.barter.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="l10n_ec_barter_wizard_form"/>
    </record>
</odoo>