<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="l10n_ec_barter_rating_wizard_form" model="ir.ui.view">
        <field name="name">l10n.ec.barter.rating.wizard.form</field>
        <field name="model">l10n_ec.barter.rating.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="user_id" invisible="1"/>
                        <field name="rating_user_id" invisible="1"/>
                        <field name="barter_template_id" invisible="1"/>
                        <field name="rating" widget="priority" required="1"/>
                        <field name="comment" required="1"/>
                    </group>
                    <footer>
                        <button name="create_rating" string="Calificar" type="object" class="btn-primary"
                                data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="l10n_ec_barter_rating_wizard_action" model="ir.actions.act_window">
        <field name="name">Ofertar</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_ec.barter.rating.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="l10n_ec_barter_rating_wizard_form"/>
    </record>
</odoo>