<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="admin_barter_group" model="res.groups">
        <field name="name">Administrador del Sitio</field>
        <field name="category_id" ref="barter_application"/>
        <field name="comment">Tiene la posibilidad de activar o desactivar usuarios, obtener reportes e identificar
            todos los productos
        </field>
    </record>
    <record id="client_barter_group" model="res.groups">
        <field name="name">Usuario Trueque</field>
        <field name="category_id" ref="barter_application"/>
        <field name="comment">Tiene la posibilidad de crear productos, y realizar trueques</field>
    </record>
    <record id="no_access_barter_group" model="res.groups">
        <field name="name">Sin acceso</field>
        <field name="category_id" ref="barter_application"/>
        <field name="comment">Para usuarios desactivados</field>
    </record>
    <!--    grupo para ocultar menus-->
    <record id="make_invisible" model="res.groups">
        <field name="name">Invisible</field>
        <field name="category_id" ref="barter_application"/>
        <field name="comment">Ocultar Menus</field>
    </record>
    <!--    Aplicaciones-->
    <record id="base.menu_management" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('l10n_ec_barter.make_invisible'))]"/>
    </record>
    <!--    Conversaciones-->
    <record id="mail.menu_root_discuss" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('l10n_ec_barter.make_invisible'))]"/>
        <field name="groups_id" eval="[(3, ref('base.group_user'))]"/>
    </record>


</odoo>