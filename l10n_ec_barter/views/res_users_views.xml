<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="l10n_ec_barter_administration_users_form" model="ir.ui.view">
        <field name="name">l10n_ec_barter_administration_users_form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="mode">primary</field>
        <field name="priority">24</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="replace">
                <field name="email"/>
            </xpath>
            <xpath expr="//page[@name='access_rights']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='preferences']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='security']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Valoraciones">
                    <field name="l10n_ec_rating_line_ids" readonly="1">
                        <tree>
                            <field name="rating_user_id"/>
                            <field name="comment"/>
                            <field name="rating" widget="priority"/>
                            <field name="create_date"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="after">
                <field name="l10n_ec_state" widget="statusbar"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <field name="l10n_ec_approve_process" invisible="1"/>
                <button string="Activar" type="object" name="l10n_ec_action_active"
                        context="{'create_user': 1}" attrs="{'invisible': [('l10n_ec_state', '!=', 'inactive')]}"/>
                <button string="Desactivar" type="object" name="l10n_ec_action_inactive"
                        context="{'create_user': 1}" attrs="{'invisible': [('l10n_ec_state', '!=', 'active')]}"/>
                <button string="Aprobar" type="object" name="approve_permission"
                        context="{'create_user': 1}"
                        attrs="{'invisible': ['|',('l10n_ec_state', '!=', 'active'), ('l10n_ec_approve_process', '=', False )]}"/>
                <button string="Rechazar" type="object" name="rejected_permission"
                        context="{'create_user': 1}"
                        attrs="{'invisible': ['|',('l10n_ec_state', '!=', 'active'), ('l10n_ec_approve_process', '=', False )]}"/>
            </xpath>
        </field>
    </record>

    <record id="l10n_ec_barter_administration_users_tree" model="ir.ui.view">
        <field name="name">l10n_ec_barter_administration_users_tree</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="mode">primary</field>
        <field name="priority">24</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='login']" position="after">
                <field name="email"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="after">
                <field name="l10n_ec_rating_total" widget="priority"/>
                <field name="l10n_ec_state" widget="badge" decoration-danger="l10n_ec_state == 'inactive'"
                       decoration-success="l10n_ec_state == 'active'"/>
            </xpath>
            <xpath expr="//field[@name='lang']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='login_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="l10n_ec_barter_administration_users_search" model="ir.ui.view">
        <field name="name">res_partner_my_profile_search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Nombre" name="name"
                        domain="[]"/>
            </search>
        </field>
    </record>

    <record id="l10n_ec_barter_res_users_action" model="ir.actions.act_window">
        <field name="name">Usuarios</field>
        <field name="res_model">res.users</field>
        <field name="search_view_id" ref="l10n_ec_barter_administration_users_search"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('l10n_ec_barter_administration_users_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('l10n_ec_barter_administration_users_form')})]"/>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="l10n_ec_barter_administration"
            name="Administración"
            groups="admin_barter_group"
            parent="l10n_ec_barter_menu"
            sequence="10"/>
    <menuitem
            id="l10n_ec_barter_administration_users"
            name="Usuarios"
            action="l10n_ec_barter_res_users_action"
            parent="l10n_ec_barter_administration"
            groups="admin_barter_group"
            sequence="1"/>

    <!--    Reportes-->

    <record id="l10n_ec_barter_administration_report_search" model="ir.ui.view">
        <field name="name">l10n_ec_barter_administration_report_search</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <search>
                <separator/>
                <filter string="Año Actual" name="current_year"
                        domain="[('create_date','&lt;',(context_today()+relativedelta(years=1)).strftime('%Y-01-01')), ('create_date','&gt;=',time.strftime('%Y-01-01'))]"/>
                <separator/>
                <filter string="Año Anterior" name="prev_year"
                        domain="[('create_date','&gt;=',(context_today()-relativedelta(years=1)).strftime('%Y-01-01')),('create_date','&lt;',time.strftime('%Y-01-01'))]"/>
                <separator/>
                <separator/>
                <filter string="Mes Actual" name="current_month"
                        domain="[('create_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01')), ('create_date','&gt;=',time.strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter string="Mes Anterior" name="prev_month"
                        domain="[('create_date','&gt;=',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('create_date','&lt;',time.strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter string="Última Semana" name="prev_week"
                        domain="[('create_date', '&gt;=', (context_today()+relativedelta(weeks=-2,days=1, weekday=0)).strftime('%Y-%m-%d')), ('create_date', '&lt;=', (context_today()+relativedelta(weeks=-1,weekday=6)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Semana Actual" name="current_week"
                        domain="[('create_date', '&lt;=', ((context_today()+relativedelta(weeks=0, weekday=-1)).strftime('%Y-%m-%d'))), ('create_date', '&gt;=', ((context_today()-relativedelta(weeks=1, weekday=0)).strftime('%Y-%m-%d')))]"/>
                <separator/>
                <filter string="Hoy" name="today"
                        domain="[('create_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')),('create_date', '&lt;=',context_today().strftime('%Y-%m-%d 23:23:59'))]"/>
                <separator/>
            </search>
        </field>
    </record>

    <record id="l10n_ec_barter_administration_report_pivot" model="ir.ui.view">
        <field name="name">l10n.ec.barter.administration.report.pivot</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="l10n_ec_state" type="row"/>
                <field name="categ_id" type="row"/>
                <field name="l10n_ec_user_id" type="row"/>
                <field name="name" type="row"/>
                <field name="list_price" type="measure" operator="sum"/>
                <field name="weight" type="measure" operator="sum"/>
                <field name="volume" type="measure" operator="sum"/>
            </pivot>
        </field>
    </record>

    <record id="l10n_ec_barter_administration_report_graph" model="ir.ui.view">
        <field name="name">l10n.ec.barter.administration.report.graph</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <graph>
                <field name="l10n_ec_user_id" type="row"/>
                <field name="l10n_ec_state" type="row"/>
                <field name="list_price" type="measure" operator="sum"/>
                <field name="weight" type="measure" operator="sum"/>
                <field name="volume" type="measure" operator="sum"/>
            </graph>
        </field>
    </record>

    <record id="l10n_ec_barter_report_action" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">product.template</field>
        <field name="search_view_id" ref="l10n_ec_barter_administration_report_search"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('l10n_ec_barter_administration_report_pivot')}),
                (0, 0, {'view_mode': 'graph', 'view_id': ref('l10n_ec_barter_administration_report_graph')})]"/>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
            id="l10n_ec_barter_administration_report"
            name="Reportes"
            action="l10n_ec_barter_report_action"
            parent="l10n_ec_barter_administration"
            groups="admin_barter_group"
            sequence="2"/>
</odoo>