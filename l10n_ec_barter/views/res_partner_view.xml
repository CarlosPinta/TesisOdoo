<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_partner_my_profile_form" model="ir.ui.view">
        <field name="name">res_partner_my_profile_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="mode">primary</field>
        <field name="priority">24</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='function']" position="replace">
            </xpath>
        </field>
    </record>

    <record id="res_partner_my_profile_tree" model="ir.ui.view">
        <field name="name">res_partner_my_profile_tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="mode">primary</field>
        <field name="priority">24</field>
        <field name="arch" type="xml">
            <!--            Eliminar de la vista original-->
            <xpath expr="//field[@name='user_id']" position="replace"/>
            <xpath expr="//field[@name='activity_ids']" position="replace"/>
            <xpath expr="//field[@name='city']" position="replace"/>
            <xpath expr="//field[@name='country_id']" position="replace"/>
            <xpath expr="//field[@name='active']" position="attributes">
                <attributes name="invisible">0</attributes>
            </xpath>
        </field>
    </record>
    <record id="res_partner_my_profile_search" model="ir.ui.view">
        <field name="name">res_partner_my_profile_search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Mi Usuario" name="my_user"
                        domain="[('l10n_ec_partner_user_id', '=', uid)]"/>
            </search>
        </field>
    </record>

    <record id="l10n_ec_barter_res_partner_action" model="ir.actions.act_window">
        <field name="name">Mi perfil</field>
        <field name="res_model">res.partner</field>
        <field name="search_view_id" ref="res_partner_my_profile_search"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('res_partner_my_profile_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('res_partner_my_profile_form')})]"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'search_default_my_user': 1,
            }
        </field>
    </record>
    <menuitem
            id="l10n_ec_barter_res_partner_menu"
            name="Mi perfil"
            groups="client_barter_group,admin_barter_group"
            action="l10n_ec_barter_res_partner_action"
            parent="l10n_ec_barter_menu"
            sequence="1"/>
</odoo>